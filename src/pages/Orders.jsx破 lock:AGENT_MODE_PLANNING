import React, { useEffect, useState } from "react";
import { Link, useNavigate } from "react-router-dom";
import authService from "../utils/authService";
import { ShoppingBag, Package, ArrowRight, Calendar, Clock, ChevronRight, Activity, Box } from "lucide-react";

/**
 * Refined Orders Component
 * 
 * Mixes a premium branding sidebar with a clean, minimalist order list.
 */
const Orders = () => {
    const navigate = useNavigate();
    const [orders, setOrders] = useState([]);
    const [loading, setLoading] = useState(true);

    useEffect(() => {
        const fetchOrders = async () => {
            try {
                const response = await authService.getOrders();
                if (response.data.success) {
                    const sortedOrders = [...response.data.data].sort((a, b) =>
                        new Date(b.date) - new Date(a.date)
                    );
                    setOrders(sortedOrders);
                }
            } catch (error) {
                console.error("Order Service Error:", error);
            } finally {
                setLoading(false);
            }
        };

        fetchOrders();
    }, []);

    return (
        <div className="w-full absolute inset-0 top-[76px] md:top-[80px] bg-white overflow-hidden font-sans">
            <div className="w-full h-full flex flex-col md:flex-row overflow-hidden border-t border-neutral-100">

                {/* Left Side: Premium Branding Sidebar (Colorful & Fixed) */}
                <div className="hidden md:flex md:w-[320px] lg:w-[400px] h-full bg-[#050505] relative p-12 flex-col justify-between text-white shrink-0 overflow-hidden border-r border-white/5">
                    {/* Architectural Accents */}
                    <div className="absolute top-0 left-0 w-full h-[300px] bg-gradient-to-b from-indigo-500/10 to-transparent"></div>
                    <div className="absolute -bottom-20 -left-20 w-80 h-80 rounded-full bg-indigo-500/5 blur-[120px]"></div>
                    <div className="absolute top-40 -right-20 w-60 h-60 rounded-full bg-blue-500/5 blur-[100px]"></div>

                    <div className="relative z-20">
                        <div className="mb-16">
                            <div className="w-14 h-14 bg-white/5 rounded-2xl flex items-center justify-center border border-white/10 mb-8 shadow-2xl">
                                <Activity className="w-7 h-7 text-indigo-400" />
                            </div>
                            <h1 className="text-5xl font-black tracking-tight mb-6 leading-[1.1]">
                                Luxury <br /> <span className="text-neutral-500">History.</span>
                            </h1>
                            <p className="text-neutral-400 text-sm leading-relaxed max-w-[260px] font-medium">
                                Review your curated selections and manage your premium acquisitions.
                            </p>
                        </div>

                        <div className="space-y-6">
                            <div className="flex items-center gap-4 group cursor-default">
                                <div className="w-10 h-10 rounded-xl bg-white/5 flex items-center justify-center border border-white/10 group-hover:border-indigo-500/30 transition-colors">
                                    <Box className="w-5 h-5 text-indigo-300" />
                                </div>
                                <div>
                                    <p className="text-[10px] font-black text-neutral-500 uppercase tracking-widest mb-0.5">Inventory Count</p>
                                    <p className="font-bold text-lg font-mono">{orders.length} Active Orders</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div className="relative z-20 pt-10 border-t border-white/5">
                        <div className="bg-indigo-600 rounded-3xl p-6 shadow-[0_20px_50px_rgba(79,70,229,0.3)]">
                            <p className="text-[10px] font-black text-indigo-200 uppercase tracking-widest mb-2">Member Status</p>
                            <div className="flex items-center justify-between">
                                <p className="text-xl font-black">Platinum Tier</p>
                                <ChevronRight className="w-5 h-5 opacity-50" />
                            </div>
                        </div>
                    </div>
                </div>

                {/* Right Side: Clean List Area */}
                <div className="flex-1 h-full overflow-y-auto bg-white custom-scrollbar">
                    <div className="max-w-4xl mx-auto py-10 px-6 md:py-16">

                        {/* Page Title (Mobile/Small) */}
                        <div className="md:hidden mb-10 pb-8 border-b border-neutral-100">
                            <h2 className="text-3xl font-bold tracking-tight">My Orders</h2>
                        </div>

                        {loading ? (
                            <div className="space-y-4">
                                {[...Array(3)].map((_, i) => (
                                    <div key={i} className="h-32 bg-neutral-50 rounded-3xl animate-pulse"></div>
                                ))}
                            </div>
                        ) : orders.length > 0 ? (
                            <div className="space-y-4">
                                {orders.map((order) => (
                                    <div
                                        key={order.id}
                                        onClick={() => navigate(`/order-details/${order.id}`)}
                                        className="group bg-white rounded-3xl p-6 border border-neutral-100 hover:border-neutral-900 transition-all cursor-pointer flex flex-col sm:flex-row sm:items-center gap-6"
                                    >
                                        {/* Order Info */}
                                        <div className="flex-1 min-w-0">
                                            <div className="flex items-center gap-3 mb-2">
                                                <span className="text-[10px] font-bold text-neutral-400 uppercase tracking-widest">ID: {order.id}</span>
                                                <div className={`px-2 py-0.5 rounded-full text-[9px] font-bold uppercase tracking-wider border ${order.status === 'Delivered'
                                                        ? 'bg-emerald-50 text-emerald-600 border-emerald-100'
                                                        : 'bg-neutral-50 text-neutral-600 border-neutral-100'
                                                    }`}>
                                                    {order.status}
                                                </div>
                                            </div>
                                            <h3 className="text-lg font-bold text-neutral-900 mb-1">Portfolio Purchase</h3>
                                            <div className="flex items-center gap-2 text-sm text-neutral-400 font-medium">
                                                <Calendar size={14} />
                                                <span>{order.date}</span>
                                            </div>
                                        </div>

                                        {/* Visual Assets */}
                                        <div className="flex items-center justify-between sm:justify-end gap-8 pt-4 sm:pt-0 border-t sm:border-0 border-neutral-50">
                                            <div className="flex -space-x-3">
                                                {order.items.slice(0, 3).map((item, i) => (
                                                    <div key={i} className="h-12 w-12 rounded-xl border-2 border-white bg-neutral-50 overflow-hidden shadow-sm">
                                                        {item.thumbnail ? (
                                                            <img src={item.thumbnail} className="w-full h-full object-cover" alt="" />
                                                        ) : (
                                                            <div className="w-full h-full flex items-center justify-center text-[10px] text-neutral-300">?</div>
                                                        )}
                                                    </div>
                                                ))}
                                                {order.items.length > 3 && (
                                                    <div className="h-12 w-12 rounded-xl border-2 border-white bg-neutral-900 flex items-center justify-center text-[10px] font-bold text-white shadow-sm">
                                                        +{order.items.length - 3}
                                                    </div>
                                                )}
                                            </div>

                                            <div className="flex items-center gap-6">
                                                <div className="text-right">
                                                    <p className="text-[10px] font-bold text-neutral-400 uppercase tracking-widest mb-0.5">Total</p>
                                                    <p className="text-xl font-bold text-neutral-900">â‚¹{order.total.toLocaleString()}</p>
                                                </div>
                                                <div className="w-10 h-10 rounded-full border border-neutral-100 flex items-center justify-center text-neutral-300 group-hover:text-black group-hover:border-black transition-all">
                                                    <ArrowRight size={18} />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        ) : (
                            <div className="text-center py-20">
                                <div className="w-20 h-20 bg-neutral-50 rounded-3xl flex items-center justify-center mx-auto mb-6 text-neutral-300">
                                    <ShoppingBag size={32} />
                                </div>
                                <h3 className="text-2xl font-bold text-neutral-900 mb-2">No orders found</h3>
                                <p className="text-neutral-400 mb-8 max-w-xs mx-auto text-sm">You haven't placed any orders yet. Start shopping to build your history.</p>
                                <Link
                                    to="/"
                                    className="inline-flex items-center gap-2 bg-black text-white px-8 py-3 rounded-2xl font-bold text-sm hover:opacity-80 transition-all"
                                >
                                    Explore Store <ChevronRight size={16} />
                                </Link>
                            </div>
                        )}

                        <div className="h-20"></div>
                    </div>
                </div>
            </div>
        </div>
    );
};

export default Orders;
